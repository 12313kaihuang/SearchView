<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--属性集合-->
    <declare-styleable name="SearchView" >
        <!--hint-->
        <attr name="hint" format="string"/>
        <!--搜索图标-->
        <attr name="svSearchIcon" format="reference" />
        <!--清空图标-->
        <attr name="svClearIcon" format="reference" />
        <!--语音图标-->
        <attr name="svVoiceIcon" format="reference" />
        <!--点击搜索后是否自动隐藏虚拟键盘-->
        <attr name="svEnableAutoHideSoftKey" format="boolean"/>
        <!--点击了搜索(不是搜索图标)后是否清除EditText的焦点-->
        <attr name="svEnableClearFocusAfterSearch" format="boolean"/>
    </declare-styleable>

</resources>